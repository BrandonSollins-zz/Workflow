<html>

  <h2> Booking Info </h2>

  <p> Studio: <%= @booking.studio %> </p>

  <p> Date: <%= @booking.statuses[:studio_times].keys[-1] %> </p>

  <p> Instruments: <%= @booking.instruments.join(', ').gsub('_', ' ') %> </p>

  <p> MP3 Links: <br>
    <% @booking.mp3_links.each do |link| %>
      <%= link_to link, link %>
    <% end %>
  </p>

  <p> Video Links: <br>
    <% @booking.video_links.each do |link| %>
      <%= link_to link, link %>
    <% end %>
  </p>

  <p> Extra Links: <br>
    <% @booking.extra_links.each do |link| %>
      <a href=<%=link%>> <%=link%> </a>
    <% end %>
  </p>

  <p> Notes: <br>
    <%= @booking.notes %>
  </p>
</html>

